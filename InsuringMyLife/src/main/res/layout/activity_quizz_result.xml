<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gabilheri.insuringmylife.QuizzResult"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/background"
    >

   <TextView
    android:id="@+id/quizTitle"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="@color/green_life"
    android:textColor="@android:color/white"
    android:text="Your Score"
    android:textSize="33sp"
    android:gravity="center_horizontal|center_vertical"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:textStyle="bold"

    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_vertical|center_horizontal"
        >
        <TextView
            android:id="@+id/textScore"
            android:textSize="175sp"
            android:textColor="@color/blue_2"
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
        />
        <TextView
            android:textSize="175sp"
            android:textColor="@color/blue_2"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            />
        <TextView
            android:id="@+id/textMaxScore"
            android:textSize="95sp"
            android:textColor="@color/blue_2"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="@dimen/activity_vertical_margin"
            />
        </LinearLayout>

    <TextView
        android:id="@+id/stringResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_result"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="15sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />
    <TextView
        android:id="@+id/stringAttempts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/current_attempts"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="15sp"
    />

    <Button
        android:id="@+id/retaqueQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/retaque_quiz"
        android:background="@drawable/standard_button"
        android:textColor="@android:color/white"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:onClick="buttonClick"
    />
    <Button
        android:id="@+id/backToQuizzes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Quizzes"
        android:background="@drawable/standard_button"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:onClick="buttonClick"
        />

</LinearLayout>
