<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gabilheri.insuringmylife.HealthActivity"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical"
    android:background="@color/background"
    android:weightSum="1"
    >

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/green_life"
        android:text="Life"
        android:textSize="45sp"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/s_l_life_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/activity_vertical_margin"
        android:paddingLeft="100sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"

        />
    <Space
        android:layout_weight="0.13"
        android:layout_width="match_parent"
        android:layout_height="0dip" />
    <Button
        android:id="@+id/reportAccident"
        android:background="@drawable/blue_button"
        android:text="Current Policies"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/life_icon_small"
        android:textSize="33sp"
        android:drawablePadding="15sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.28"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:onClick="changeActivity"
        />

    <Button
        android:id="@+id/existingClaims"
        android:background="@drawable/green_life_button"
        android:text="Get Quote"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/quote_icon"
        android:textSize="33sp"
        android:drawablePadding="15sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.28"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:onClick="changeActivity"
        />

    <Button
        android:id="@+id/contactAgent"
        android:background="@drawable/orange_button"
        android:text="Contact Your Agent"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/agent_logo"
        android:textSize="33sp"
        android:drawablePadding="15sp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.28"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:onClick="changeActivity"
        />


</LinearLayout>