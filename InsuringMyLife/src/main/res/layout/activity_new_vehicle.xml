<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gabilheri.insuringmylife.NewVehicle"
        tools:ignore="MergeRootFrame"
        android:orientation="vertical"
        android:background="@color/background"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >
        <EditText
            android:id="@+id/policeNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:padding="5dip"
            android:hint="@string/police_number"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            />

        <TextView
            android:id="@+id/carInfo"
            android:text="@string/vehicle_info"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@android:color/white"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            />
        <Spinner
            android:id="@+id/carBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:entries="@array/car_brands"
            android:spinnerMode="dialog"
            android:padding="10dip"
            />
        <EditText
            android:id="@+id/carModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/car_model"
            android:background="@drawable/box"
            android:padding="5dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            >
            <EditText
                android:id="@+id/carTag"
                android:hint="@string/car_tag"
                android:padding="5dip"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@drawable/box"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />
            <EditText
                android:id="@+id/carYear"
                android:padding="5dip"
                android:hint="@string/year"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/box"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/driverInfo"
            android:text="@string/driver_info"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@android:color/white"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            />
        <EditText
            android:id="@+id/carDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="5dip"
            android:hint="@string/main_driver"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            >
            <EditText
                android:id="@+id/driversLicenceNumber"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/box"
                android:layout_weight="0.8"
                android:padding="5dip"
                android:hint="@string/drivers_license"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                />

            <Spinner
                android:id="@+id/stateDriversLicense"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:entries="@array/states"
                android:spinnerMode="dialog"
                />
        </LinearLayout>

        <Button
            android:textColor="@android:color/white"
            android:background="@color/button_background"
            android:text="@string/pick_driver_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showDatePickerDialog"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
        />

        <LinearLayout
            android:id="@+id/genderLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            >

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:text="Gender: "
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
            />
            <RadioGroup
                android:layout_weight="0.7"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <RadioButton
                android:id="@+id/radioMale"
                android:text="Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:button="@android:drawable/btn_star"

                />

            <RadioButton
                android:id="@+id/radioFemale"
                android:text="Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:button="@android:drawable/btn_star"
                />
            </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/addVehicle"
            android:background="@color/button_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/add_vehicle"
            android:onClick="addNewVehicle"
            />
    </LinearLayout>
</ScrollView>