<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gabilheri.insuringmylife.MyAgent$PlaceholderFragment"
    android:orientation="vertical"
    android:background="@color/background"
    android:weightSum="1"
    >

    <TextView
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@color/orange_color"
        android:text="My Agent"
        android:gravity="center_horizontal|center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
    />

    <TextView
        android:id="@+id/agentName"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.07"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="Agent Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textStyle="bold"
    />

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="0.4"
        >

       <ImageView
           android:id="@+id/agentPicture"
           android:layout_marginLeft="@dimen/activity_horizontal_margin"
           android:layout_marginRight="@dimen/activity_vertical_margin"
           android:layout_marginBottom="@dimen/activity_vertical_margin"
           android:background="@drawable/boxed_image"
           android:src="@drawable/person"
           android:layout_weight="0.5"
           android:layout_width="0dip"
           android:layout_height="match_parent" />

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:text="Services"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />
            <TextView
                android:text="Insurance"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
            />
            <TextView
                android:text="Languages"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />
            <TextView
                android:text="English"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />

            <TextView
                android:text="Spanish"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
            />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
    />

    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dip">

        <TextView
            android:text="Phone:"
            android:layout_weight="0.2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/agentPhoneNumber"
            android:text="555-555-555"
            android:layout_weight="0.5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/orange_color"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />

    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dip">

        <TextView
            android:text="Hours:"
            android:layout_weight="0.2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/agentHours"
            android:text="Mon - Fri: 9:00AM - 6:00PM"
            android:layout_weight="0.5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/orange_color"
            android:textSize="16sp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />

    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="0dip">

        <TextView
            android:text="Email:"
            android:layout_weight="0.2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/agentEmail"
            android:text="my_agent@email.com"
            android:layout_weight="0.5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/orange_color"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
    />

    <LinearLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:layout_weight="0.17"
        android:layout_width="match_parent"
        android:layout_height="0dip">

        <Button
            android:id="@+id/callAgent"
            android:text="Call Agent"
            android:layout_weight="0.48"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@color/green_color"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal"
            android:drawableLeft="@drawable/ic_action_call"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
        />

        <Space
            android:layout_weight="0.04"
            android:layout_width="0dip"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/addToContacts"
            android:text="Add to Contacts"
            android:layout_weight="0.48"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:textColor="@android:color/white"
            android:gravity="center_vertical|center_horizontal"
            android:drawableLeft="@drawable/ic_action_add_person"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            />
    </LinearLayout>
</LinearLayout>
