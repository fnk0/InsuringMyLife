<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gabilheri.insuringmylife.CarActivity"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <TextView
        android:background="@color/blue"
        android:text="Vehicles"
        android:textSize="45sp"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/car_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="30sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:layout_marginBottom="45dip"
        />

    <Button
        android:id="@+id/vehiclesButton"
        android:layout_weight="0.26"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@drawable/blue_button"
        android:drawableLeft="@drawable/s_car_logo"
        android:text="My Vehicles"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:paddingLeft="30dip"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="changeActivity"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />
    <Button
        android:id="@+id/claimsButton"
        android:layout_weight="0.26"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@drawable/red_button"
        android:drawableLeft="@drawable/s_claims_logo3"
        android:text="@string/existing_claims"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:paddingLeft="30dip"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="changeActivity"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />
    <Button
        android:id="@+id/quoteButton"
        android:layout_weight="0.26"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@drawable/green_life_button"
        android:drawableLeft="@drawable/quote_icon"
        android:text="@string/get_quote"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="35sp"
        android:paddingLeft="35dip"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="changeActivity"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />
    <Button
        android:id="@+id/agentButton"
        android:layout_weight="0.26"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@drawable/orange_button"
        android:drawableLeft="@drawable/s_l_agent_logo"
        android:text="Contact My Agent"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="50dip"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="changeActivity"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        />



</LinearLayout>